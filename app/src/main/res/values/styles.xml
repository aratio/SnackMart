<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Divider line -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerGrey</item>
    </style>

    <!-- checkbox styles -->
    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCheckbox.type">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCheckbox.type.veggie">
        <item name="android:textColor">@color/veggieColor</item>
        <item name="android:buttonTint">@color/veggieColor</item>
    </style>

    <style name="MyCheckbox.type.nonveggie">
        <item name="android:textColor">@color/nonVeggieColor</item>
        <item name="android:buttonTint">@color/nonVeggieColor</item>
    </style>

    <style name="MyDialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/actionBarTextColor</item>
        <item name="android:background">@color/actionBarBgColor</item>
    </style>

</resources>
